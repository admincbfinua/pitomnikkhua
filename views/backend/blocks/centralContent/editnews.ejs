 <h2 class="sub-header">Редактирование новости</h2>
 <% if(data){ %>
 <form class="form-horizontal" id="shablondocs_data" method="post" action="/backend/news/edit/<%= data[0].id %>">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Тема новости</label>
    <div class="col-sm-10">
      <input type="text" name="name" value="<%= data[0].name %>" class="form-control" placeholder="Тема новости">
    </div>
  </div>
 
 <div class="form-group">
    <label class="col-sm-2 control-label">Полный текст новости</label>
    <div class="col-sm-10">
      <textarea name="full" class="form-control" rows="5"><%= data[0].full %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Важность</label>
    <div class="col-sm-10">
      <select name="vazn">
		<option disabled value="0">Выберите важность</option>
		<option <% if(data[0].vazn==1){ %> selected <% } %> value="top">Очень важная</option>
		<option <% if(data[0].vazn==2){ %> selected <% } %> value="low">Обычная</option>
	  </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" name="submit" value="Сохранить">
	 <input type="button" name="cancel" value="Cancel" class="cancel" onclick="cancelNews()">
    </div>
  </div>
</form>
<% } %>		 
		 
		 
		 
		 
		 